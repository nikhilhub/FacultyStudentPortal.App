@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Register</h2>

    <form id="registerForm">
        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" id="fullName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" id="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" id="password" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Role</label>
            <select id="role" class="form-select" required>
                <option value="">Select Role</option>
                <option value="Faculty">Faculty</option>
                <option value="Student">Student</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success w-100">Register</button>
        <div id="error" class="text-danger text-center mt-2"></div>
    </form>

    <div class="text-center mt-3">
        <a href="/Account/Login">Already have an account? Login</a>
    </div>
</div>
@section Scripts{
<script>
    $('#registerForm').submit(function (e) {
        e.preventDefault();

        const user = {
            fullName: $('#fullName').val(),
            email: $('#email').val(),
            passwordHash: $('#password').val(),
            role: $('#role').val()
        };

        $.ajax({
            url: 'https://localhost:7266/api/account/register',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(user),
            success: function () {
                alert("Registration successful!");
                window.location.href = "/Account/Login";
            },
            error: function (xhr) {
                $('#error').text(xhr.responseJSON?.message || "Registration failed.");
            }
        });
    });
</script>
}